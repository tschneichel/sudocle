.timer {
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 1;
}

.pause-button {
  height: 0.75rem;
  cursor: pointer;
  padding-left: 0.1rem;

  :global(svg) {
    height: 0.7rem;
    fill: var(--fg);
    stroke: none;

    :global(rect) {
      rx: 1;
    }
  }
}

.timer-pause-overlay {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: var(--bg);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 20000;

  @supports (backdrop-filter: blur(15px)) {
    background-color: var(--bg-alpha);
    backdrop-filter: blur(15px);
  }
}

.continue-area {
  font-size: 0.6rem;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  .title {
    font-weight: 500;
    font-size: 1.5em;
    line-height: 1;
    padding: 1.25em 0;
    display: flex;
    flex-direction: row;
    align-items: center;

    :global(svg) {
      margin-right: 0.25rem;
      margin-bottom: 0.1rem;
    }
  }

  .button-area {
    width: 4rem;
  }
}
